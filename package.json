{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "This template provides a setup for Node.js development",
  "repository": "https://github.com/diasjoaovitor/node-boilerplate.git",
  "author": "Jo√£o Vitor <jvitordiass@outlook.com.br>",
  "license": "MIT",
  "main": "src/app.ts",
  "keywords": [
    "node-boilerplate",
    "eslint",
    "commit-linter",
    "prettier",
    "jest",
    "typescript"
  ],
  "scripts": {
    "dev": "./init-dev.sh",
    "start:dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start:prod": "node dist/src/app.js",
    "services:up": "docker compose up -d",
    "services:stop": "docker compose stop",
    "services:down": "docker compose down",
    "migrate:make": "knex migrate:make $1 --knexfile src/database/knexfile.ts",
    "migrate:latest": "knex migrate:latest --knexfile src/database/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile src/database/knexfile.ts",
    "seed:run": "knex seed:run --knexfile src/database/knexfile.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watchAll",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint . --ext js,ts --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.2.0",
    "@types/pg": "^8.11.7",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "express": "^4.19.2",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "pg": "^8.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
